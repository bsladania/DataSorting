@using Data_Sort_Web_App.Models
@model Sort

<!-- SEO meta data for top results in the search engine list-->
@{
    ViewBag.Title = "Sort Data | Bubble Sorting | Bikramjeet Singh Ladania";
}
<br/>
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">Notice!</a>
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
            <div class="panel-body">1. input field is required.<br/>2. Int - only integers are accepted from 1 to 500 values.<br/>3. String - only strings are accepted. Word size should not exceed more than 10 
            </div>
        </div>
    </div>

    <!-- Form to gather input from user -->
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <fieldset>
            <div class="panel panel-primary">
                <div class="panel-heading" text-align="center">Bubble Sorting | Integers | String | </div>
                <div class="panel-body">
                    Input: @Html.EditorFor(model => model.input, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.input, "", new { @class = "text-danger" })
                    Value Type
                    @Html.DropDownListFor(model => model.valueType,
                                    new SelectList(Enum.GetValues(typeof(DataType))), new { @class = "form-control" })
                    <br />
                    <input type="submit" value="Sort" class="form-control btn-primary" />
                </div>
            </div>
        </fieldset>
    }



